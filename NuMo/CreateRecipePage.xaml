<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		Title = "Create Recipe"
		x:Class="NuMo.CreateRecipePage">
	<ContentPage.ToolbarItems>
		<ToolbarItem Name="Save" />
  	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout Orientation = "Vertical">
			<StackLayout Orientation = "Horizontal">
				<Label Text = "Recipe Name" HorizontalOptions="Center" Margin = "18,12,10,0" />
				<Entry Margin = "0,10,10,0" HorizontalOptions="FillAndExpand"/>
			</StackLayout>
			<StackLayout Orientation = "Horizontal">
				<Button Text="Add Ingredient"
						Clicked = "OnAddIngredient"
						HorizontalOptions= "CenterAndExpand"
            			 />
			</StackLayout>
			<TableView>
				<TableRoot>
					<TableSection Title="Ingredient List">

						</TableSection>
					
					</TableRoot>

			</TableView>
					
			</StackLayout>
		
	</ContentPage.Content>
</ContentPage>
